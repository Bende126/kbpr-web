<div id="<%= dom_id @votes %>">
  <div class="bg-secondary shadow rounded-lg max-w-full py-6 px-5 mb-12">
    <div class="flex justify-between items-center">
      <%= authorized_link_to 'Szerkeszt', vote_path(vote), class: 'btn' if action_name == 'index' && current_user&.admin? %>
    </div>
    <span class="block text-sm text-white font-light leading-snug py-2">
      <%= I18n.l(vote.created_at) if vote.created_at %>
    </span>
  </div>
</div>
