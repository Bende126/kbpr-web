<div id="<%= dom_id link %>">
  <div class="bg-secondary shadow rounded-lg max-w-full py-6 px-5 mb-12">
    <div class="flex justify-between items-center">
      <span class="block text-3xl font-bold text-white"><%= link.title || "Nincs még elnevezve" %></span>
      <%= authorized_link_to 'Szerkeszt', link_path(link), class: 'btn' if action_name == 'index' && current_user&.admin? %>
    </div>
    
    <p class="text-white leading-snug md:leading-normal pb-4">
      <%= link_to link.short(), link.short(), class: "text-blue-500" %> -> <%= link_to link.url, link.url, class: "text-blue-500" %>
    </p>

    <p class="text-white leading-snug md:leading-normal font-medium">
      Kattintások száma: <%= link.clicks %>
    </p>

    <p class="text-white leading-snug md:leading-normal font-medium pb-3">
      Bekapcsolva: <%= link.enabled ? "✔" : "❌" %>
    </p>

    <span class="block text-sm text-white font-light leading-snug py-2">
      <%= I18n.l(link.created_at) if link.created_at %>
    </span>
  </div>
</div>
