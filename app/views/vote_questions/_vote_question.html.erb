<div id="<%= dom_id vote_question %>">
  <div class="bg-secondary shadow rounded-lg max-w-full py-6 px-5 mb-12">
    <div class="flex justify-between items-center">
      <span class="block text-3xl font-bold text-white"><%= vote_question.title %></span>
      <%= authorized_link_to 'Szerkeszt', vote_question_path(vote_question), class: 'btn' if action_name == 'index' && current_user&.admin? %>
    </div>
    <span class="block text-sm text-white font-light leading-snug py-2">
      <%= I18n.l(vote_question.created_at) if vote_question.created_at %>
    </span>
    <p class="text-white leading-snug md:leading-normal pb-7">
      <%= vote_question.content %>
    </p>
  </div>
</div>
