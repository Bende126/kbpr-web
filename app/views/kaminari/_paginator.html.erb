<%# The container tag
  - available local variables
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
    paginator:     the paginator that renders the pagination tags inside
-%>
<%= paginator.render do -%>
  <nav class="my-6 bg-secondary p-4 rounded" role="navigation" aria-label="pager">
    <div class="flex justify-between space-x-6">
      <%= prev_page_tag unless current_page.first? %>
      <%= next_page_tag unless current_page.out_of_range? || current_page.last? %>
    </div>
    <div class="flex items-center justify-between my-6 flex-wrap ">
      <% each_page do |page| -%>
        <% if page.display_tag? -%>
          <%= page_tag page %>
        <% elsif !page.was_truncated? -%>
          <%= gap_tag %>
        <% end -%>
      <% end -%>
    </div>
    <div class="flex justify-between space-x-6">
      <%= first_page_tag unless current_page.first? %>
      <%= last_page_tag unless current_page.out_of_range? || current_page.last? %>
    </div>
  </nav>
<% end -%>
