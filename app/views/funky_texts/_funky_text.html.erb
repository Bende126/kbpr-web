<div id="<%= dom_id funky_text %>">
  <div class="bg-secondary shadow rounded-lg max-w-full py-6 px-5 mb-12">
    <div class="flex justify-between items-center">
      <span class="block text-3xl font-bold text-white"><%= funky_text.title %></span>
      <%= authorized_link_to 'Szerkeszt', funky_text_path(funky_text), class: 'btn' if action_name == 'index' && current_user&.admin? %>
    </div>
    <span class="block text-sm text-white font-light leading-snug py-2">
      <%= I18n.l(funky_text.created_at) if funky_text.created_at %>
    </span>
    <p class="text-white leading-snug md:leading-normal pb-7">
      <%= funky_text.content %>
    </p>
  </div>
</div>
